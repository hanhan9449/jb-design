.button {
    border: 2px solid rgba(0 0 0 / .06);
    background-color: white;
    transition: background-color 250ms ease;
    padding: 8px 12px;
    border-radius: 8px;
    &:hover {
        background-color: rgba(237, 255, 246, 0.8);
    }
    &:active {
        background-color: rgba(181, 160, 253, 0.8);
    }
}