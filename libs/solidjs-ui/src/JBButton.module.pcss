.button {
    border: 2px solid rgba(0 0 0 / .06);
    background-color: white;
    transition: background-color 250ms ease;
    padding: 6px 12px;
    border-radius: 8px;
    &:hover {
        background-color: rgba(182, 255, 223, 0.8);
    }
    &:active {
        background-color: rgba(128, 90, 255, 0.8);
    }
}